<div id="<%= dom_id friend %>">


<div class="jumbotron">
  <h1 class="display-4"><%= friend.first_name %> <%= friend.last_name %></h1>
  <p class="lead">
    <%= friend.email %> |
    <%= friend.phone %> |
    @<%= friend.twitter %> 
  </p>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-dark' %>
  <%= link_to "Delete", @friend, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this friend" }, class: "btn btn-danger" %>
  <%= link_to "Back to friends", friends_path, class:'btn btn-dark' %>
</div>